# FinanceMate Production Environment Configuration
# Copy this file to .env and configure your production API credentials
# NEVER commit .env file to version control - it contains sensitive data

# =============================================================================
# GMAIL OAUTH 2.0 CONFIGURATION
# Obtain from: https://console.cloud.google.com/
# =============================================================================
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_PROJECT_ID=your-gmail-project-id

# =============================================================================
# MICROSOFT OUTLOOK OAUTH 2.0 CONFIGURATION
# Obtain from: https://portal.azure.com/
# =============================================================================
OUTLOOK_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_TENANT_ID=your-tenant-id

# =============================================================================
# AI SERVICES CONFIGURATION
# Choose one: Anthropic Claude OR OpenAI
# =============================================================================
# Anthropic Claude API (Recommended)
CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI API (Alternative)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4

# =============================================================================
# AUSTRALIAN BANKING API CONFIGURATION
# Obtain from: https://basiq.io/
# =============================================================================
BASIQ_API_KEY=your-basiq-production-api-key
BASIQ_APPLICATION_ID=your-basiq-application-id
BASIQ_CLIENT_ID=your-basiq-client-id
BASIQ_CLIENT_SECRET=your-basiq-client-secret

# =============================================================================
# MCP SERVER CONFIGURATION
# External MCP endpoint for AI financial assistant
# =============================================================================
MCP_SERVER_URL=https://your-mcp-server.com/api
MCP_SERVER_AUTH_TOKEN=your-mcp-auth-token

# =============================================================================
# ENCRYPTION AND SECURITY CONFIGURATION
# =============================================================================
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-for-session-tokens
KEYCHAIN_SERVICE_NAME=FinanceMate.Production

# =============================================================================
# ENVIRONMENT SETTINGS
# Values: development, staging, production
# =============================================================================
ENVIRONMENT=production
DEBUG_MODE=false
LOG_LEVEL=info

# =============================================================================
# NETWORK AND INFRASTRUCTURE
# =============================================================================
API_BASE_URL=https://api.financemate.com
WEBHOOK_SECRET=your-webhook-secret-for-callbacks
CORS_ORIGINS=https://financemate.com,https://app.financemate.com

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_API_KEY=your-analytics-api-key
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_STORAGE_URL=your-backup-storage-url
DISASTER_RECOVERY_ENDPOINT=your-dr-endpoint

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for Australian financial records
GDPR_COMPLIANCE_ENDPOINT=your-gdpr-compliance-api
AUSTRALIAN_PRIVACY_ACT_COMPLIANCE=true

# =============================================================================
# SECURITY HEADERS AND PROTECTION
# =============================================================================
CSP_HEADER=default-src 'self'; script-src 'self' 'unsafe-inline'
HSTS_MAX_AGE=31536000
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# =============================================================================
# VALIDATION
# =============================================================================
# This file should never contain actual credentials
# All values above should be replaced with your production credentials
# Verify security with: npm run security-audit
